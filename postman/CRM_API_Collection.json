{
  "info": {
    "name": "CRM API Tests",
    "description": "Colecci√≥n de pruebas para el API del sistema CRM",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      },
      "response": []
    },
    {
      "name": "Users Management",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usuarios",
              "host": ["{{base_url}}"],
              "path": ["usuarios"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has JSON body\", function () {",
                  "    pm.response.to.be.json;",
                  "});",
                  "",
                  "pm.test(\"Response contains users array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Postman\",\n  \"apellido\": \"Test\",\n  \"edad\": 28\n}"
            },
            "url": {
              "raw": "{{base_url}}/usuarios",
              "host": ["{{base_url}}"],
              "path": ["usuarios"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"User created successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData.mensaje).to.include('agregado');",
                  "    ",
                  "    // Guardar user_id para otras pruebas",
                  "    pm.environment.set(\"user_id\", jsonData.id);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Generate Random Users",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cantidad\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/usuarios/aleatorios",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "aleatorios"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usuarios/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Emails Management",
      "item": [
        {
          "name": "Generate Emails",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/generar-correos",
              "host": ["{{base_url}}"],
              "path": ["generar-correos"]
            }
          }
        },
        {
          "name": "Get All Emails",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/correos",
              "host": ["{{base_url}}"],
              "path": ["correos"]
            }
          }
        }
      ]
    },
    {
      "name": "Bulk Operations",
      "item": [
        {
          "name": "Delete All Users",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/usuarios/todos",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "todos"]
            }
          }
        },
        {
          "name": "Delete All Emails",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/correos/todos",
              "host": ["{{base_url}}"],
              "path": ["correos", "todos"]
            }
          }
        }
      ]
    }
  ]
}